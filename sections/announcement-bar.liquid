{% for block in section.blocks %}
  <div
    class="{{section.settings.text_align}}"
    style="background: {{block.settings.bg_color}}; color: {{block.settings.text_color}};"
  >
    {{ block.settings.text }}
  </div>
{% endfor %}
{% schema %}
{
  "name": "t:sections.announcement-bar.name",
  "max_blocks": 12,
  "settings": [
    {
      "type": "select",
      "id": "text_align",
      "label": "Text alignment",
      "options": [
        {
          "value": "text-left",
          "label": "Text Left"
        },
        {
          "value": "text-center",
          "label": "Text center"
        },
        {
          "value": "text-right",
          "label": "Text right"
        }
      ]
    }
  ],
  "class": "announcement-bar-section",
  "blocks": [
    {
      "type": "announcement",
      "name": "t:sections.announcement-bar.blocks.announcement.name",
      "settings": [
        {
          "type": "richtext",
          "id": "text",
          "label": "Text"
        },
        {
          "type": "color",
          "id": "bg_color",
          "label": "Background color",
          "default": "#fff",
          "info": "Change background color"
        },
        {
          "type": "color",
          "id": "text_color",
          "label": "Color",
          "default": "#000",
          "info": "Change text color"
        },
        {
          "type": "url",
          "id": "link",
          "label": "t:sections.announcement-bar.blocks.announcement.settings.link.label"
        }
      ]
    }
  ],
  "default": {
    "blocks": [
      {
        "type": "announcement"
      }
    ]
  }
}
{% endschema %}
